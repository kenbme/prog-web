<%= render "home/header" %>

<main class="container">
  <form action="<%= url_for :produtos %>" method="get">
    <div>
      <label for="categoria">Categoria</label>
      <input
        type="text"
        name="categoria"
        id="categoria"
        value="<%= params[:categoria] %>"
      >
    </div>

    <div>
      <label for="tags">Tags (separe por v√≠rgula)</label>
      <input type="text" name="tags" id="tags" value="<%= params[:tags] %>">
    </div>

    <div>
      <button type="submit">Filtrar</button>
    </div>
  </form>

  <section class="grid">
    <% if current_user.vendedor? %>
      <button onclick="window.location.href='<%= new_produto_path %>'">
        Novo Produto
      </button>
    <% end %>

    <% produtos.each do |produto| %>
      <%= render "produto", produto: %>
    <% end %>
    <% if produtos.empty? %>
      <p>Nenhum produto encontrado.</p>
    <% end %>
  </section>
</main>

<%= render "home/footer" %>
