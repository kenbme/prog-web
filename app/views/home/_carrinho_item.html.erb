<article>
  <% if carrinho_item.produto.imagens.attached? %>
    <section>
      <div>
        <% carrinho_item.produto.imagens.each do |imagem| %>
          <figure>
            <%= image_tag imagem, width: 150, alt: "Imagem do produto #{carrinho_item.produto.nome}" %>
          </figure>
        <% end %>
      </div>
    </section>
  <% else %>
    <p>Sem imagens</p>
  <% end %>

  <h2><%= carrinho_item.produto.nome %></h2>

  <dl>
    <dt>Descrição:</dt>
    <dd><%= carrinho_item.produto.descricao %></dd>

    <dt>Preço unitário:</dt>
    <dd>R$ <%= format_preco(carrinho_item.produto.preco) %></dd>

    <dt>Quantidade:</dt>
    <dd><%= carrinho_item.quantidade %> unidades</dd>

    <dt>Subtotal:</dt>
    <dd>R$ <%= format_preco(carrinho_item.produto.preco * carrinho_item.quantidade) %></dd>
  </dl>
</article>
